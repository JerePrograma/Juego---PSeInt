SubProceso presionar(p1, p2, px Por Referencia, py Por Referencia, signo Por Referencia)
    // Definir eleccion Como caracter; // No se necesita si estamos utilizando números
    Definir eleccion Como Entero; // Usaremos un número para representar la dirección de movimiento
    Escribir "Digite una A S D W para moverse";
    Leer eleccion;
	
    // Según el número ingresado, asignamos la dirección de movimiento correspondiente
    Segun eleccion Hacer
        1:
            px <- p1;
            py <- p2 - 1;
            signo <- "<";
        2:
            px <- p1 + 1;
            py <- p2;
            signo <- "v";
        3:
            px <- p1;
            py <- p2 + 1;
            signo <- ">";
        4:
            px <- p1 - 1;
            py <- p2;
            signo <- "^";
        De Otro Modo:
            Escribir "Te saliste del mapa, te moriste no hay de otra";
    FinSegun
FinSubProceso


SubProceso seguimiento(tam, pintar_1)
    Definir px, py, p1, p2 Como Entero;
    Definir signo Como Caracter;
    Definir continuar Como Logico; // Variable para controlar si se debe continuar o no
    
    p1 <- 0;
    p2 <- 0;
    continuar <- Verdadero; // Inicializamos la variable
    
    Mientras continuar Hacer
        presionar(p1, p2, px, py, signo);
        
        Si px < 0 o px >= tam o py < 0 o py >= tam Entonces
            Escribir "Te saliste del mapa, te moriste no hay de otra";
            continuar <- Falso; // Si se sale del mapa, detenemos el juego
        Sino
            Si pintar_1(px, py) = "x" Entonces
                Escribir "Chocaste contra una pared de clavos";
                continuar <- Falso; // Si choca contra una pared, detenemos el juego
            Sino
                Si pintar_1(px, py) = "[" Entonces
                    Escribir "¡Llegaste, descansa en esta hoguera guerrero!";
                    continuar <- Falso; // Si llega al final, detenemos el juego
                Sino
                    pintar_1(p1, p2) <- "o"; // Borra la posición anterior del jugador
                    p1 <- px;
                    p2 <- py;
                    pintar_1(p1, p2) <- signo; // Actualiza la posición del jugador con el nuevo signo
                    solo_pintar(tam, pintar_1);
                FinSi;
            FinSi;
        FinSi;
    FinMientras;
FinSubProceso


